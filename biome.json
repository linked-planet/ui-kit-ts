{
	"$schema": "https://biomejs.dev/schemas/1.7.0/schema.json",
	"formatter": { 
		"enabled": false,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineEnding": "lf",
		"lineWidth": 80,
		"attributePosition": "auto"
	},
	"organizeImports": { "enabled": true },
	"linter": {
		"enabled": true,
		"rules": { 
			"recommended": true, 
			"complexity": {
				"noForEach": "off"
			}
		},
		"ignore": [
			"node_modules",
			"dist",
			"build",
			"coverage",
			"public",
			"out",
			"tmp",
			"temp",
			"vendor",
			"generated"
		]
	},
	"javascript": {
		"formatter": {
			"jsxQuoteStyle": "double",
			"quoteProperties": "asNeeded",
			"semicolons": "asNeeded",
			"arrowParentheses": "always",
			"bracketSpacing": true,
			"bracketSameLine": false,
			"quoteStyle": "double",
			"attributePosition": "auto"
		}
	}
}

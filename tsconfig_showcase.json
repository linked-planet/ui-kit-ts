{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["es5", "es2015", "es2016", "dom", "esnext"],
    "types": ["node"],
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": "showcase",
    "sourceMap": true,
    "strict": true,
    "target": "ES6"
  },
  "include": ["src/showcase/**/*.ts", "src/showcase/**/*.tsx"]
}